      const quantity = parseFloat(
        stockItem.quantity ||
        stockItem.stock ||
        stockItem.available ||
        0
      )


      if (quantity <= 0) {
        skippedCount++
        return
      }


      // –ü—Ä–æ–ø—É—Å–∫–∞–µ–º –ø–æ–ª–Ω–æ—Å—Ç—å—é –∑–∞—Ä–µ–∑–µ—Ä–≤–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Ç–æ–≤–∞—Ä—ã, —Ç–∞–∫ –∫–∞–∫ –æ–Ω–∏ –Ω–µ –æ—Ç–æ–±—Ä–∞–∂–∞—é—Ç—Å—è –≤ –æ—Ç—á–µ—Ç–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
      // –ù–û: –î–ª—è "–°–∫–ª–∞–¥ –ø—Ä–µ–¥–∑–∞–∫–∞–∑–æ–≤" –º—ã —Ö–æ—Ç–∏–º –≤–∏–¥–µ—Ç—å –∏–º–µ–Ω–Ω–æ —Ä–µ–∑–µ—Ä–≤—ã, –ø–æ—ç—Ç–æ–º—É –Ω–µ –ø—Ä–æ–ø—É—Å–∫–∞–µ–º
      const reserve = parseFloat(stockItem.reserve || 0)

      if (quantity <= reserve && targetWarehouse !== '–°–∫–ª–∞–¥ –ø—Ä–µ–¥–∑–∞–∫–∞–∑–æ–≤') {
        skippedCount++
        return
      }

      // –ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç: –°–µ–±–µ—Å—Ç–æ–∏–º–æ—Å—Ç—å –∏–∑ stock (–ø–æ –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–º—É —Å–∫–ª–∞–¥—É) -> –°–µ–±–µ—Å—Ç–æ–∏–º–æ—Å—Ç—å –∏–∑ products -> 0
      // –í–∞–∂–Ω–æ: –ø—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞ null/undefined, —Ç–∞–∫ –∫–∞–∫ —Ü–µ–Ω–∞ –º–æ–∂–µ—Ç –±—ã—Ç—å 0
      let price = 0

      if (targetWarehouse === '–°–∫–ª–∞–¥ –ø—Ä–µ–¥–∑–∞–∫–∞–∑–æ–≤') {
        // –î–ª—è —Å–∫–ª–∞–¥–∞ –ø—Ä–µ–¥–∑–∞–∫–∞–∑–æ–≤ –∏—Å–ø–æ–ª—å–∑—É–µ–º —Ü–µ–Ω—É –ø—Ä–æ–¥–∞–∂–∏ (sale_price)
        price = parseFloat(product.sale_price || product.price || 0)
      } else {
        // Fix: If stock cost is 0, fallback to product cost
        const stockCost = parseFloat(stockItem.cost_price || 0)
        if (stockCost > 0) {
          price = stockCost
        } else {
          price = parseFloat(product.cost_price || 0)
        }
      }

      const totalValue = Calculator.calculateTotalValue(quantity, price)
      const reserveValue = Calculator.calculateTotalValue(reserve, price)


      const warehouse = warehouseMap.get(targetWarehouse)
      const articlesSet = processedArticles.get(targetWarehouse)

      if (!warehouse || !articlesSet) {
        console.warn('Warehouse not found:', targetWarehouse)
