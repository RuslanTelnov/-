      }

      // –°—á–∏—Ç–∞–µ–º —É–Ω–∏–∫–∞–ª—å–Ω—ã–µ –Ω–æ–º–µ–Ω–∫–ª–∞—Ç—É—Ä—ã –ø–æ –∞—Ä—Ç–∏–∫—É–ª—É
      if (!articlesSet.has(product.article)) {
        warehouse.nomenclatureCount++
        articlesSet.add(product.article)
      }

      warehouse.quantityInPieces += quantity
      warehouse.totalValue += totalValue
      warehouse.reserveQuantity = (warehouse.reserveQuantity || 0) + reserve
      warehouse.reserveValue = (warehouse.reserveValue || 0) + reserveValue

      // Calculate Potential Profit
      // (Sale Price - Cost Price) * Quantity
      // Only for items that are NOT archived
      // EXCLUDE Preorder Warehouse (virtual/unpaid stock) for global stats but include in warehouse local stat
      if (!product.archived) {
        const salePrice = parseFloat(product.sale_price || product.price || 0)
        const costPrice = price

        if (salePrice > costPrice && costPrice > 0) {
          const itemPotentialProfit = (salePrice - costPrice) * quantity
          warehouse.potentialProfit = (warehouse.potentialProfit || 0) + itemPotentialProfit

          if (targetWarehouse !== '–°–∫–ª–∞–¥ –ø—Ä–µ–¥–∑–∞–∫–∞–∑–æ–≤') {
            totalPotentialProfit += itemPotentialProfit
            potentialProfitList.push({
              id: product.id,
              name: product.name,
              article: product.article,
              warehouse: targetWarehouse,
              quantity,
              costPrice,
              salePrice,
              potentialProfit: itemPotentialProfit,
              image_url: product.image_url
            })
          }
        }
      }

      processedCount++
    })

    console.log(`‚úÖ Processed ${processedCount} stock items, skipped ${skippedCount}`)
    console.log(`üìä Distribution by warehouse:`, byWarehouse)
  } else {
    console.warn('‚ö†Ô∏è No stock data found!')
  }

  // Fallback –Ω–∞ products —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ stock –ø—É—Å—Ç–∞—è –∏–ª–∏ –Ω–∏—á–µ–≥–æ –Ω–µ –æ–±—Ä–∞–±–æ—Ç–∞–Ω–æ
  // –≠—Ç–æ –≥–∞—Ä–∞–Ω—Ç–∏—Ä—É–µ—Ç, —á—Ç–æ –¥–∞–Ω–Ω—ã–µ –±—É–¥—É—Ç –ø–æ–∫–∞–∑–∞–Ω—ã –¥–∞–∂–µ –µ—Å–ª–∏ stock –Ω–µ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä–æ–≤–∞–Ω–∞
  if (processedCount === 0) {
