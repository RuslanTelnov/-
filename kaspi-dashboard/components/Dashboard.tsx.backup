    monthSales: monthSalesSum,
  })

  setPotentialProfitItems(potentialProfitList)

  setLastUpdate(new Date())
} catch (error: any) {
  console.error('‚ùå Error loading dashboard data:', error)
  console.error('Error details:', {
    message: error?.message,
    stack: error?.stack,
    name: error?.name
  })

  // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –ø—É—Å—Ç—ã–µ –¥–∞–Ω–Ω—ã–µ –ø—Ä–∏ –æ—à–∏–±–∫–µ
  const defaultWarehouseNames = ['–°–∫–ª–∞–¥ –ö–∏—Ç–∞–π', '–û—Å–Ω–æ–≤–Ω–æ–π —Å–∫–ª–∞–¥', '–°–∫–ª–∞–¥ –ø—Ä–µ–¥–∑–∞–∫–∞–∑–æ–≤', '–°–∫–ª–∞–¥ —Ç—Ä–∞–Ω–∑–∏—Ç']
  setWarehousesData(defaultWarehouseNames.map(name => ({
    name,
    nomenclatureCount: 0,
    quantityInPieces: 0,
    totalValue: 0,
  })))
