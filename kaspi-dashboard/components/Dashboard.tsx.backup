  // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –¥–∞–Ω–Ω—ã–µ —Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω—ã –ø—Ä–∞–≤–∏–ª—å–Ω–æ
  const totalNomenclature = Array.from(warehouseMap.values()).reduce((sum, wh) => sum + wh.nomenclatureCount, 0)
  const totalQuantity = Array.from(warehouseMap.values()).reduce((sum, wh) => sum + wh.quantityInPieces, 0)
  const totalValue = Array.from(warehouseMap.values()).reduce((sum, wh) => sum + wh.totalValue, 0)

  console.log('=== –°–í–û–î–ö–ê ===')
  console.log(`–í—Å–µ–≥–æ –Ω–æ–º–µ–Ω–∫–ª–∞—Ç—É—Ä: ${totalNomenclature}`)
  console.log(`–í—Å–µ–≥–æ —à—Ç—É–∫: ${totalQuantity.toFixed(2)}`)
  console.log(`–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å: ${totalValue.toLocaleString('ru-RU', { maximumFractionDigits: 2 })} ‚Ç∏`)

  // –§–æ—Ä–º–∏—Ä—É–µ–º –º–∞—Å—Å–∏–≤ —Å–∫–ª–∞–¥–æ–≤ –≤ –Ω—É–∂–Ω–æ–º –ø–æ—Ä—è–¥–∫–µ (–ø–æ–∫–∞–∑—ã–≤–∞–µ–º –≤—Å–µ, –¥–∞–∂–µ –±–µ–∑ –¥–∞–Ω–Ω—ã—Ö)
  const warehousesArray = warehouseNames
    .map(name => {
      const warehouse = warehouseMap.get(name)
      if (!warehouse) {
        // –ï—Å–ª–∏ —Å–∫–ª–∞–¥–∞ –Ω–µ—Ç –≤ –º–∞–ø–µ, —Å–æ–∑–¥–∞–µ–º –ø—É—Å—Ç–æ–π
        return {
          name,
          nomenclatureCount: 0,
          quantityInPieces: 0,
          totalValue: 0,
        }
      }
      return warehouse
    })
    .filter(w => w !== null && w !== undefined) // –£–±–∏—Ä–∞–µ–º null/undefined

  console.log('Final warehouses array:', warehousesArray)
  setWarehousesData(warehousesArray)

  setStats({
    totalProducts: productsCount,
    totalSales: salesCount,
    totalRevenue,
    lowStockItems: lowStock.length,
    avgMargin,
    avgTurnover,
    highPriorityItems: highPriority,
