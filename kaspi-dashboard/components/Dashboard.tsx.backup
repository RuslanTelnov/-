    if (stockData && stockData.length > 0) {
      console.warn('üí° Stock data exists but nothing was processed!')
      console.warn('   Possible reasons:')
      console.warn('   1. Products not found for stock items')
      console.warn('   2. All quantities are zero')
      console.warn('   3. Store mapping issues')
    }

    console.log('üîÑ Trying fallback to products table...')

    // –ü—Ä–æ–±—É–µ–º –ø–æ–ª—É—á–∏—Ç—å –¥–∞–Ω–Ω—ã–µ –∏–∑ products —Å quantity > 0
    const { data: productsWithQty, error: productsError } = await supabase
      .from('products')
      .select('id, name, article, price, cost_price, sale_price, category, image_url, quantity, quantity_reserve, archived')
      .eq('archived', false) // Filter out archived products
      .gt('quantity', 0) // Only products with quantity > 0
      .limit(1000) // Limit to avoid fetching too many if not needed

    if (productsError) throw productsError

    if (productsWithQty && productsWithQty.length > 0) {
      console.log(`‚úÖ Found ${productsWithQty.length} products with quantity > 0`)

      const mainWarehouse = warehouseMap.get('–û—Å–Ω–æ–≤–Ω–æ–π —Å–∫–ª–∞–¥')
      const articlesSet = processedArticles.get('–û—Å–Ω–æ–≤–Ω–æ–π —Å–∫–ª–∞–¥')

      if (mainWarehouse && articlesSet) {
        let addedCount = 0

        productsWithQty.forEach((product: any) => {
          if (!product.article) return

          const quantity = parseFloat(product.quantity || 0)
          if (quantity <= 0) return

          // –î–æ–±–∞–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –µ—â–µ –Ω–µ –¥–æ–±–∞–≤–ª–µ–Ω –∏–∑ stock
          if (!articlesSet.has(product.article)) {
            const price = parseFloat(product.price || product.sale_price || 0)
            const totalValue = Calculator.calculateTotalValue(quantity, price)

            mainWarehouse.nomenclatureCount++
            articlesSet.add(product.article)
            mainWarehouse.quantityInPieces += quantity
            mainWarehouse.totalValue += totalValue
            addedCount++

            // Fallback Potential Profit
            const salePrice = parseFloat(product.sale_price || product.price || 0)
            const costPrice = parseFloat(product.cost_price || 0)

            // Ensure cost > 0
            if (costPrice > 0) {
              const potentialProfit = (salePrice - costPrice) * quantity
              if (potentialProfit > 0) {
                totalPotentialProfit += potentialProfit
                potentialProfitList.push({
                  id: product.id,
                  name: product.name,
                  article: product.article,
                  warehouse: '–û—Å–Ω–æ–≤–Ω–æ–π —Å–∫–ª–∞–¥', // Assuming fallback is for Main Warehouse
                  quantity,
                  costPrice,
                  salePrice,
                  potentialProfit,
                  image_url: product.image_url
                })
              }
            }
          }
        })

        console.log(`‚úÖ Added ${addedCount} products from fallback`)
      }
    } else {
      console.warn('‚ö†Ô∏è No products with quantity > 0 found for fallback')
    }
  }

  // –§–∏–Ω–∞–ª—å–Ω–∞—è –¥–∏–∞–≥–Ω–æ—Å—Ç–∏–∫–∞
  console.log('=== –ò–¢–û–ì–û–í–´–ï –î–ê–ù–ù–´–ï –ü–û –°–ö–õ–ê–î–ê–ú ===')
  warehouseNames.forEach(name => {
    const wh = warehouseMap.get(name)!
    console.log(`${name}:`, {
      nomenclatureCount: wh.nomenclatureCount,
